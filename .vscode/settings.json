{
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.trimAutoWhitespace": true,

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "eslint.packageManager": "yarn",

  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "coverage": true,
    "**/dist/**": true,
    "**/.cache-loader": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/bower_components": true,
    "coverage": true,
    "**/.cache-loader": true
  },
  "http.proxy": "",
  "http.proxyAuthorization": null,
  "http.proxyStrictSSL": false,
  "prettier.trailingComma": "es5",
  "debug.node.autoAttach": "on"
}
